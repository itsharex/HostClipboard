{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "SuperCV",
        "version": "0.0.1"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "all": false,
                "readFile": true,
                "readDir": true
            },
            "protocol": {
                "all": false,
                "asset": true
            },
            "shell": {
                "all": false,
                "open": true
            },
            "globalShortcut": {
                "all": true
            },
            "window": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.clipboard-helper.dev",
            "targets": "all"
        },
        "security": {
            "csp": null
        },
        "systemTray": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": true
        },
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "resizable": true,
                "title": "SuperCV",
                "width": 800,
                "height": 600,
                "transparent": true
            },
            {
                "label": "settings",
                "fullscreen": false,
                "resizable": true,
                "title": "Settings",
                "width": 1000,
                "height": 800,
                "url": "index.html#/settings"
            }
        ],
        "macOSPrivateApi": true
    }
}