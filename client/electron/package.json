{
  "name": "host_clipboard",
  "version": "0.0.1",
  "description": "HostClipboardçš„client demo",
  "homepage": "https://github.com/Zeke-chin/HostClipboard",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --exec electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.hostclipboard.client",
    "win": {
      "icon": "./icons/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "./icons/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "linux": {
      "icon": "./icons/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": {
    "name": "zeke",
    "email": "zeke.chin@icloud.com"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4"
  }
}
